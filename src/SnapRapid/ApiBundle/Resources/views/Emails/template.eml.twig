{% extends 'SnapRapidApiBundle:Emails:base.eml.twig' %}

{% block subject %}{% endblock subject %}

{% block body_html %}
    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
            "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
    <html xmlns="http://www.w3.org/1999/xhtml">
        <head>
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
            <title>{{ subject|default('Snap Rapid') }}</title>
            <style type="text/css">
                #outer_wrapper {
                    width: 600px;
                }

                @media only screen and (max-width: 480px) {
                    html, body {
                        -webkit-text-size-adjust: 100%;
                        -ms-text-size-adjust: 100%;
                        font-family: Arial, Helvetica, sans-serif;
                    }

                    *[id=outer_wrapper] {
                        width: 100% !important;
                    }

                    *[class=hero_picture_rd] {
                        width: 320px !important;
                        height: auto !important;

                    }
                }
            </style>
        </head>
        <body bgcolor="#FFFFFF" style="font-family: Arial, Helvetica, sans-serif;">
            <table height="100%" width="100%" bgColor=#20282d>
                <tr>
                    <td>
                        <table width="600" border="0" align="center" cellpadding="0" cellspacing="0" id="outer_wrapper" style="width: 600px; margin: 0 auto;">
                            <!-- start outer table -->
                            <tbody>
                                <tr>
                                    <td width="640">
                                        <table width="100%" border="0" bgcolor="#FFF" align="center" cellspacing="0" cellpadding="0" style="background-color:#FFF;">
                                            <!-- start content table -->
                                            <tbody>
                                                <tr bgcolor="#f4d93f">
                                                    <!-- start header table row -->
                                                    <td>
                                                        <a href="{{ websiteUrl }}" style="text-decoration: none!important;" title="Snap Rapid"
                                                                ><img src="{{ websiteUrl }}images/logo1.png" alt="Snap Rapid" name="Snap Rapid" class="hero_picture_rd" border="0" style="border-radius: 0 48px 48px 48px;
   height: 48px; display: block"/></a>
                                                    </td>
                                                </tr>

                                                <!-- end header table row -->

                                                <tr>
                                                    <td class="article">
                                                        {% block content %}{% endblock %}
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
        </body>
    </html>
{% endblock %}
